# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[public/index.html]
indent_size = 2

[config/**/*.js]
indent_size = 2

[scripts/*.js]
indent_size = 2
